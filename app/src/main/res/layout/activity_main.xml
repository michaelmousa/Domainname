<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Result Domain Name"
            android:ems="10"
            android:id="@+id/edDomain"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Domain Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDomain"
            tools:ignore="UnknownId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="144dp" android:layout_marginStart="144dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="144dp"
            android:layout_marginRight="144dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/edDomain"/>
    <TextView
            android:text=""
            android:layout_width="327dp"
            android:layout_height="142dp"
            android:id="@+id/tvResult"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="402dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="59dp"
            android:layout_marginStart="59dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="37dp" app:layout_constraintTop_toBottomOf="@+id/btnDomain"/>
</android.support.constraint.ConstraintLayout>